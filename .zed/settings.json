{
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "classFunctions": [
          "cva",
          "cx"
        ],
        "experimental": {
          "classRegex": [
            "[cls|class|className|classList]\\s\\:\\=\\s\"([^\"]*)"
          ]
        }
      }
    }
  },
  "file_types": {
    "env": [
      ".env",
      ".env.*"
    ],
    "tailwindcss": [
      "*.css"
    ]
  },
  "hidden_files": [
    "**/.wrangler",
    "**/.tanstack",
    "**/.claude"
  ],
  "file_scan_exclusions": [
    "**/.wrangler",
    "**/.tanstack"
  ],
  "languages": {
    "HTML": {
      "language_servers": [
        "biome"
      ],
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      },
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    },
    "JSON": {
      "language_servers": [
        "biome"
      ],
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      },
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    },
    "JSONC": {
      "language_servers": [
        "biome"
      ],
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      },
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    },
    "JSDoc": {
      "language_servers": [
        "biome"
      ],
      "code_actions_on_format": {
        "source.fixAll.astro": true,
        "source.organizeImports.biome": true
      },
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    },
    "TSX": {
      "language_servers": [
        "biome",
        "typescript-language-server",
        "tailwindcss-language-server",
        "..."
      ],
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      },
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    },
    "JavaScript": {
      "language_servers": [
        "biome",
        "typescript-language-server",
        "..."
      ],
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      },
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    },
    "TypeScript": {
      "language_servers": [
        "biome",
        "typescript-language-server",
        "..."
      ],
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      },
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    },
    "CSS": {
      "language_servers": [
        "biome",
        "tailwindcss-language-server",
        "..."
      ],
      "code_actions_on_format": {
        "source.fixAll.biome": true
      },
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    }
  },
  "terminal": {
    "button": true,
    "dock": "bottom",
    "toolbar": {
      "breadcrumbs": false
    }
  }
}
